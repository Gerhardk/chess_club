<section class="text-center m-3">
    <h1>Chess Club</h1>
    <% if current_user %>
        <h5><%= current_user.email %></h5>
    <% end %>
    <%= link_to_if(current_user.nil?, "Login", new_user_session_path, class: 'btn btn-primary m-3') do
          link_to('Sign out', destroy_user_session_path, method: 'delete', class: 'btn btn-danger m-3')
    end %>
</section>

<div class="container mx-auto">
  <div class="leaderboard row">
    <div class="col-12 text-center">
      <h2>
        Leaderboard
      </h2>
    </div>    
  </div>
  <div class="table-responsive row">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Surname</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <th scope="row"><%= member.current_rank %></th>
            <td><%= member.name %></td>
            <td><%= member.surname %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<section class="text-center m-3">
  <% if current_user %>
    <%= link_to('Members', members_path, class: 'm-3') %> |
    <%= link_to('Matches',matches_path, class: 'm-3') %>
  <% end %>
<section>
